<% include ../partials/header %>

<div class="container">
    <h1 class="my-2" style="text-align: center;">Create a New Campground</h1>
    <div class="row justify-content-center">
        <div class="col-lg-6 mt-2">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <label for="campgroundName">Campground Name</label>
                    <input class="form-control" type="text" name="name" id="campgroundName" placeholder="name">
                </div>
                <div class="form-group">
                    <label for="campgroundImage">Image URL: </label>
                    <input class="form-control" type="text" name="image" id="campgroundImage" placeholder="enter URL">
                </div>
                <div class="form-group">
                    <label for="campgroundDescription">Campground Description</label>
                    <input class="form-control" type="text" name="campgroundDescription" placeholder="description">
                </div>
                <div class="form-group">
                    <input class="btn btn-primary mb-2" type="submit" value="Submit">
                </div>
                <a href="/campgrounds">Go Back</a>
            </form>
        </div>
    </div>




</div>

<% include ../partials/footer %>